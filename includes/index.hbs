<html lang="fr">

<head>
  <title>{{siteTitle}}</title>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="robots" content="noindex, nofollow" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />
  <link rel="alternate" type="application/rss+xml" title="{{siteTitle}}" href="{{feedHref}}" />
  <link href="index.css" rel="stylesheet" />
</head>

<body>
  <link href="https://cdn.lineicons.com/2.0/LineIcons.css" rel="stylesheet">
  <section class="header-container">
    <div style="display:flex; justify-content:flex-end; align-items:flex-end;">
      <div style="flex-grow:1;"><div class="header-title"><span style="color:#b48ead;">ðŸŽ§ Fictions sonores :</span> nouveaux Ã©pisodes</div></div>
      <div class=icons><a class="lni lni-32 lni-github" href="https://github.com/Zenigata/les-dernieres-fictions-sonores" target="_blank" rel="noopener noreferrer"></a></div>
    </div>
  </section>

  {{#each dates}}
  {{#each articles}}
  <section class="day-container">
    <article>
      <details>
        <Summary>{{title}}</Summary>
        <div class="details-content">
          {{#if itunes}}
            {{#if enclosure}}
            <div><audio src="{{enclosure.url}}" controls></audio></div>
            <div>Duration: <time>{{itunes.duration}}</time></div>
          {{/if}}
        {{/if}}
          <p>{{description}}</p>
          <div class="button">
            <a href={{link}} target="_blank" rel="noopener noreferrer">Ã‰couter</a>
            <a href={{source.siteUrl}} target="_blank" rel="noopener noreferrer">Site Â· {{source.title}}</a>
            <div class="date">{{isoPublishDate}}</div>
          </div>
        </div
      </details>
    </article>

  </section>
  {{/each}}
  {{/each}}

  <script src=index.js></script>

  <!-- Convert url in plaintext to clickable link -->
  <script src="https://cdn.jsdelivr.net/npm/linkifyjs@3.0.0-beta.3/dist/linkify.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/linkifyjs@3.0.0-beta.3/dist/linkify-element.min.js"></script>
  <script>document.querySelectorAll("article .details-content").forEach($ => linkifyElement($, {attributes: {target: '_blank', rel: 'noopener noreferrer'}}))</script>

</body>

</html>
